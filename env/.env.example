# Archivo de configuración local (copiar a .env y completar)
# NO SUBIR .env A GIT
#
# Uso: copy env\.env.example .env

# ==============================================
# CONFIGURACIÓN DEL ROBOT
# ==============================================

# Tipo de robot: g1 o go2 (lowercase)
ROBOT_TYPE=g1

# IP del robot (verificar con ipconfig o la app del robot)
ROBOT_IP=192.168.123.161

# ==============================================
# CONFIGURACIÓN DE RED
# ==============================================

# Nombre de la interfaz de red que se conecta al robot
# Windows: Ethernet, Wi-Fi, etc. (ver con: ipconfig)
# Ejemplos: Ethernet, Wi-Fi, "Ethernet 2"
NETWORK_INTERFACE=Ethernet

# ==============================================
# CONFIGURACIÓN DEL LABORATORIO
# ==============================================

# Modo de datos: replay (sin robot) o live (con robot)
DATA_MODE=replay

# Habilitar logging de sesiones
ENABLE_LOGGING=true

# Nombre de sesión (si se genera automáticamente, dejar vacío)
SESSION_NAME=

# Directorio para logs (relativo a la raíz del proyecto)
LOG_DIR=data/local/sessions

# ==============================================
# CONFIGURACIÓN DE SEGURIDAD
# ==============================================

# Habilitar límites de seguridad en modo clase
ENABLE_SAFETY_LIMITS=true

# Archivo de límites (en config/)
LIMITS_FILE=config/limits.yaml

# ==============================================
# CONFIGURACIÓN DE DESARROLLO
# ==============================================

# Nivel de verbosidad: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Habilitar modo debug
DEBUG=false
